{
    "compilerOptions": {
        "target": "ES2020",
        "allowJs": true,
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ES2020"],

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "noEmit": true,
        "jsx": "react-jsx",

        "paths": {
            "@src/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@views/*": ["./src/views/*"],
            "@utils/*": ["./src/utils/*"],
            "@types/*": ["./src/types/*"],
            "@assets/*": ["./src/assets/*"],
            "@context/*": ["./src/context/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@router/*": ["./src/router/*"],
            "@mocks/*": ["./src/mocks/*"]
        },
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
